#!/usr/bin/env bash
if [ -z "${BASH_VERSION:-}" ]; then exec bash "$0" "$@"; fi
set -euo pipefail
# apt-upgrade-report ‚Äî upgrade & changelog reporter with logging
# Usage:
#   apt-upgrade-report                 # run update/upgrade + last 1 day report
#   apt-upgrade-report 3               # run update/upgrade + last 3 days report
#   apt-upgrade-report --no-upgrade    # skip upgrade, just generate report
#   apt-upgrade-report --no-md         # skip Markdown copy
#   apt-upgrade-report -d 3            # flags: days + toggles
usage() {
  cat <<USAGE
Usage: $(basename "$0") [--days N|-d N] [--no-md] [--no-upgrade] [--help]
  --days N | -d N   Number of days to include (default: 1). You can also pass N as a single positional arg.
  --no-md           Skip saving the Markdown copy.
  --no-upgrade      Skip running 'sudo apt update && sudo apt upgrade -y'.
  --help            Show this help and exit.
Examples:
  $(basename "$0")
  $(basename "$0") 3
  $(basename "$0") -d 7 --no-md --no-upgrade
USAGE
}

DAYS=1
SAVE_MD=1
RUN_UPGRADE=1

while [[ $# -gt 0 ]]; do
  case "$1" in
    -d|--days)
      [[ $# -ge 2 ]] || { echo "Error: --days requires a value" >&2; exit 2; }
      DAYS="$2"; shift 2;;
    --no-md)
      SAVE_MD=0; shift;;
    --no-upgrade)
      RUN_UPGRADE=0; shift;;
    -h|--help)
      usage; exit 0;;
    *)
      if [[ "$1" =~ ^[0-9]+$ ]]; then
        DAYS="$1"; shift
      else
        echo "Unknown argument: $1" >&2
        usage
        exit 2
      fi
      ;;
  esac
done

if [[ $RUN_UPGRADE -eq 1 ]]; then
  echo "== Running apt update"
  sudo apt update
  echo "== Running apt upgrade"
  sudo apt upgrade -y
  if command -v flatpak >/dev/null 2>&1; then
    echo "== Running flatpak update"
    flatpak update -y
  fi
fi

REPORT_DIR="$HOME/Documents/upgradeReports"
TIMESTAMP="$(date +"%Y-%m-%d_%H-%M-%S")"
REPORT_FILE_TXT="$REPORT_DIR/upgrade-report-$TIMESTAMP.txt"
REPORT_FILE_MD="$REPORT_DIR/upgrade-report-$TIMESTAMP.md"
mkdir -p "$REPORT_DIR"

DATE_REGEX="$(
  for i in $(seq 0 $((DAYS-1))); do date -d "$i days ago" +%Y-%m-%d; done | paste -sd'|'
)"

LOG_STREAM="$(mktemp)"
trap 'rm -f "$LOG_STREAM"' EXIT
zcat -f /var/log/dpkg.log* 2>/dev/null > "$LOG_STREAM" || true

readarray -t PACKAGES < <(
  grep -E "$DATE_REGEX" "$LOG_STREAM" \
  | grep ' upgrade ' \
  | awk '{print $4}' \
  | cut -d: -f1 \
  | sort -u
)

if [[ ${#PACKAGES[@]} -eq 0 ]]; then
  echo "No packages upgraded in the last $DAYS day(s)."
  exit 0
fi

{
  echo "============================================"
  echo "üìÖ Upgrade Report - Generated on $(date)"
  echo "üóÇ  Time window: Last $DAYS day(s)"
  echo "============================================"
  echo

  for pkg in "${PACKAGES[@]}"; do
    echo "=============================="
    echo "üì¶ $pkg"
    echo "=============================="
    if ! apt changelog "$pkg" 2>/dev/null; then
      echo "(No changelog available)"
    fi
    echo
  done
} | tee "$REPORT_FILE_TXT"

if [[ "$SAVE_MD" -eq 1 ]]; then
  {
    echo "# Upgrade Report"
    echo
    echo "- Generated: $(date)"
    echo "- Window: Last $DAYS day(s)"
    echo
    for pkg in "${PACKAGES[@]}"; do
      echo "## $pkg"
      if ! apt changelog "$pkg" 2>/div
      fi
      echo
    done
  } > "$REPORT_FILE_MD"
  echo "üìù Markdown copy saved to: $REPORT_FILE_MD"
fi

echo "‚úÖ Text report saved to: $REPORT_FILE_TXT"
