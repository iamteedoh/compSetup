-- Ensure tree and treesitter are present (NVChad includes these by default, but we pin/ensure)
return {
  { "nvim-tree/nvim-tree.lua", lazy = false, config = function()
      require("nvim-tree").setup{}
    end },
  { "nvim-treesitter/nvim-treesitter", build = ":TSUpdate" },
  -- NERDTree (optional, classic tree)
  { "preservim/nerdtree", lazy = true, cmd = { "NERDTree", "NERDTreeToggle" } },
  -- Treesitter grammars you commonly use
  {
    "nvim-treesitter/nvim-treesitter",
    opts = {
      ensure_installed = {
        "lua","vim","vimdoc","bash","python","yaml","json","markdown","markdown_inline","go","rust","javascript","typescript"
      },
      highlight = { enable = true },
      indent = { enable = true },
    },
  },

  -- Ensure nvim-cmp is enabled with buffer+path sources and Ctrl-Space to trigger
  {
    "hrsh7th/nvim-cmp",
    opts = function(_, opts)
      local cmp = require("cmp")
      local types = require("cmp.types")
      opts = opts or {}
      opts.completion = vim.tbl_deep_extend("force", opts.completion or {}, {
        keyword_length = 1,
        completeopt = "menu,menuone,noselect",
        autocomplete = { types.cmp.TriggerEvent.TextChanged },
      })
      opts.mapping = cmp.mapping.preset.insert({
        ["<C-Space>"] = cmp.mapping.complete(),
        ["<CR>"] = cmp.mapping(function(fallback)
          if cmp.visible() and cmp.get_active_entry() then
            cmp.confirm({ select = false })
          else
            fallback()
          end
        end, { "i", "s" }),
        ["<C-n>"] = cmp.mapping.select_next_item(),
        ["<C-p>"] = cmp.mapping.select_prev_item(),
        ["<Tab>"] = cmp.mapping(function(fallback)
          if cmp.visible() then
            cmp.confirm({ select = true })
          else
            fallback()
          end
        end, { "i", "s" }),
      })
      opts.sources = cmp.config.sources({
        { name = "nvim_lsp" },
        { name = "path" },
        { name = "buffer" },
        { name = "spell" },
      })

      -- Ensure markdown/text use spell + buffer prominently
      cmp.setup.filetype({ "markdown", "text" }, {
        sources = cmp.config.sources({
          { name = "spell" },
          { name = "buffer" },
          { name = "path" },
        })
      })
      return opts
    end,
  },

  -- Completion sources (ensure present)
  { "hrsh7th/cmp-nvim-lsp" },
  { "hrsh7th/cmp-buffer" },
  { "hrsh7th/cmp-path" },
  { "f3fora/cmp-spell" },

  -- LSP config + Mason to install language servers automatically
  { "neovim/nvim-lspconfig" },
  { "williamboman/mason.nvim", build = ":MasonUpdate" },
  {
    "williamboman/mason-lspconfig.nvim",
    opts = {
      ensure_installed = {
        -- Code completion/lint servers to auto-install
        "lua_ls", "pyright", "bashls", "tsserver", "gopls",
        "rust_analyzer", "jsonls", "yamlls", "html", "cssls",
      },
      automatic_installation = true,
    },
  },

  -- Linters and tool installer
  { "mfussenegger/nvim-lint" },
  {
    "WhoIsSethDaniel/mason-tool-installer.nvim",
    opts = {
      ensure_installed = {
        -- common linters/formatters used by nvim-lint or CLIs
        "shellcheck",   -- sh/bash/zsh
        "ruff",         -- python
        "eslint_d",     -- js/ts
        "yamllint",     -- yaml
      },
      auto_update = true,
      run_on_start = true,
    },
  },

  -- Apply our basic LSP setups
  {
    "neovim/nvim-lspconfig",
    config = function()
      -- Ensure mason + mason-lspconfig are set up then apply lsp configs
      pcall(require, "mason").setup
      pcall(require, "mason-lspconfig").setup, {}
      pcall(function() require("custom.lsp") end)
    end,
  },

  -- Configure nvim-lint from our custom module
  {
    "mfussenegger/nvim-lint",
    config = function()
      pcall(function() require("custom.lint") end)
    end,
  },

  -- GitHub Copilot for inline AI suggestions
  {
    "github/copilot.vim",
    event = "InsertEnter",
    config = function()
      vim.g.copilot_no_tab_map = true
      vim.g.copilot_assume_mapped = true

      vim.g.copilot_filetypes = {
        ["*"] = true,
        markdown = true,
        gitcommit = true,
        help = false,
        lazy = false,
        ["TelescopePrompt"] = false,
        ["dap-repl"] = false,
      }

      local accept = function()
        return vim.fn["copilot#Accept"]("\\<CR>")
      end

      vim.keymap.set("i", "<C-l>", accept, {
        expr = true,
        silent = true,
        replace_keycodes = false,
        desc = "Copilot accept suggestion",
      })

      vim.keymap.set("i", "<C-\\>", "<Plug>(copilot-dismiss)", {
        silent = true,
        desc = "Copilot dismiss suggestion",
      })

      vim.keymap.set("n", "<leader>cp", "<cmd>Copilot panel<CR>", { desc = "Copilot panel" })
      vim.keymap.set("n", "<leader>cs", "<cmd>Copilot status<CR>", { desc = "Copilot status" })
      vim.keymap.set("n", "<leader>ce", "<cmd>Copilot enable<CR>", { desc = "Copilot enable" })
      vim.keymap.set("n", "<leader>cd", "<cmd>Copilot disable<CR>", { desc = "Copilot disable" })
    end,
  },
}


