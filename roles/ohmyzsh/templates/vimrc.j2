" My vim settings
syntax on
set nu
set mouse+=a
set backspace=indent,eol,start
filetype indent plugin on
" set modeline
set backupdir=~/.vim/tmp/     " for backup files
set directory=~/.vim/tmp/     " for swap files
set visualbell
set background=dark

" set guifont=Inconsolata\ for\ Powerline:pixelsize=12
let g:Powerline_symbols = 'fancy'
set encoding=utf-8
" set t_Co=256
set fillchars+=stl:\ ,stlnc:\
" set term=xterm-256color
set termencoding=utf-8

set rtp+=/usr/local/lib/python2.7/dist-packages/powerline/bindings/vim/
set laststatus=2 " Always display the status line in all windows
set showtabline=2 " Always display the tabline, even if there is only 1 tab
set noshowmode " Hide the defaults mode text (e.g -- INSERT -- below the statusline)
set t_Co=256

